<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="TabLayout" parent="Widget.Design.TabLayout">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>

        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>

        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorTextActive</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">1.5dp</item>

        <item name="tabTextAppearance">@style/TabTextAppearance</item>

    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">

        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/textM</item>
        <item name="textAllCaps">false</item>


    </style>


</resources>